{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "schema for common ocean properties",
  "type": "object",
  "required": [],
  "definitions": {
    "initialize-service-agreement": {
      "properties": {
        "asset-did": {
          "type": "string"
        },
        "service-definition-id": {
          "type": "string"
        },
        "service-agreement-id": {
          "type": "string"
        },
        "signature": {
          "type": "string"
        },
        "consumer-address": {
          "type": "string"
        }
      },
      "required": [
        "asset-did",
        "service-definition-id",
        "consumer-address",
        "signature",
        "service-agreement-id"
      ],
      "additionalProperties": false
    },
    "purchased-asset": {
      "properties": {
        "service-agreement-id": {
          "type": "string"
        },
        "consumer-address": {
          "type": "string"
        }
      },
      "required": [
        "consumer-address",
        "service-agreement-id"
      ],
      "additionalProperties": false
    },
    "invoke-payload": {
      "properties": {
        "operation": {
          "type": "string"
        },
        "params": {
            "type": "object"
        }
      },
      "required": [
          "operation","params"
      ]
    },
    "params": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^.*": {
          "type": "string"
        }
      }
    }
  }
}
